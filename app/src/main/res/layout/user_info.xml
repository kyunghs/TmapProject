<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8F9"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- 상단 배경 -->
        <View
            android:layout_width="411dp"
            android:layout_height="100dp"
            android:background="#FF6F42" />


        <!-- 프로필 이미지 -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/karina"

            android:clipToOutline="true"
            android:elevation="4dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="-60dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="프로필 이미지" />

        <!-- 이름 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="karina"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- 이메일 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="karina@Gmail.com"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

        <!-- 프로필 편집 버튼 -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 편집"
            android:background="@drawable/button_border"
            android:textColor="#FFFFFF"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginBottom="32dp"
            android:elevation="4dp" />

        <!-- 주차 요금 감면 타이틀 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주차 요금 감면 해당 사항"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- 감면 항목 -->
        <!-- 감면 항목 -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:alignmentMode="alignMargins"
            android:layout_marginBottom="32dp">

            <!-- 항목 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@drawable/border">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/user_1"
                    android:contentDescription="장애인" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="장애인"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center" />
            </LinearLayout>

            <!-- 항목 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@drawable/border">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/user_2"
                    android:contentDescription="다자녀" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="다자녀"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center" />
            </LinearLayout>

            <!-- 항목 3 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@drawable/border">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/user_3"
                    android:contentDescription="저공해 차량" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="저공해 차량"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center" />
            </LinearLayout>

            <!-- 항목 4 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@drawable/border">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/user_1"
                    android:contentDescription="국가유공자" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="국가유공자"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center" />
            </LinearLayout>

            <!-- 항목 5 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@drawable/border">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/user_4"
                    android:contentDescription="모범 납세자" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="모범 납세자"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center" />
            </LinearLayout>

            <!-- 항목 6 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@drawable/border">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/user_5"
                    android:contentDescription="한부모 가정" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="한부모 가정"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center" />
            </LinearLayout>
        </GridLayout>

    </LinearLayout>
</ScrollView>
