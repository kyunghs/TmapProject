
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_popup"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_gravity="center">

    <!-- 위치 정보 -->
    <TextView
        android:id="@+id/location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울 공영 주차장"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#737373"
        android:drawableStart="@drawable/navi_icon" />


    <!-- 현재 잔여석 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="현재 잔여석"
            android:textSize="19dp"
            android:textStyle="bold"
            android:textColor="#000000" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/current_seats_text"
            android:layout_below="@id/location_text"
            android:text="9"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="5dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000000"
            />
    </LinearLayout>

    <!-- 예상 잔여석 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="예상 잔여석"
            android:textSize="16dp"
            android:textColor="#FF5E00" />
        <TextView
            android:id="@+id/expected_seats_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/current_seats_text"
            android:layout_marginTop="4dp"
            android:text="7"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#FF8B61"
            />
    </LinearLayout>

    <!-- 도착 시간 -->
    <TextView
        android:id="@+id/arrival_time_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/expected_seats_text"
        android:layout_marginTop="16dp"
        android:text="오후 8:53분 도착"
        android:textSize="16dp"
        android:textColor="#888888" />

</LinearLayout>
