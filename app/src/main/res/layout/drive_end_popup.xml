<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="370dp"
    android:background="@drawable/rounded_popup"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/drive_end_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/drive_end_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:text="주행 완료"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:text="주행을 종료합니다"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray" />

    <Button
        android:id="@+id/return_main_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="메인화면으로 돌아가기"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button_yes" />



</LinearLayout>
